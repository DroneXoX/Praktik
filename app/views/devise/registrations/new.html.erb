<div class="card">
  <h5 class="card-header">Registrering</h5>
<div class="card-body"> <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label :Mailadress %><br />
    <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field form-group">
    <%= f.label :Lösenord %> <br />
    <% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, class: "form-control", placeholder: "Minst 6 tecken", autocomplete: "new-password" %>
  </div>

  <div class="field form-group">
    <%= f.label :Bekräfta_lösenord %>
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
  </div>


  <div class="actions">
    <%= f.submit "Registrera", class: "btn btn-primary" %>
  </div>
<% end %>
<%= link_to "Glömt lösenord?", new_password_path(resource_name) %>
